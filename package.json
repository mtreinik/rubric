{
  "name": "rubric",
  "version": "1.0.0",
  "description": "A tool for creating interactive assessment rubrics",
  "repository": "git@github.com:mtreinik/rubric.git",
  "author": "Mikko Reinikainen <mikko.reinikainen@iki.fi>",
  "license": "MIT",
  "keywords": [
    "education",
    "feedback",
    "formative assessment"
  ],
  "private": false,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint .",
    "start": "node dist/server.js",
    "build": "yarn build-server && yarn build-client",
    "build-server": "tsc",
    "build-client": "cd client/ && yarn install --production=false && yarn build && cd ..",
    "heroku-postbuild": "yarn build"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "express": "^4.17.1",
    "node": "^12.18.4"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^5.8.2"
  }
}
